---
import type { CertificateType } from "./types";

export interface Props extends CertificateType {}

const { href, image, name } = Astro.props;
---

<a href={href} class="certificate" target="_blank" rel="noopener noreferrer">
	<figure class="certificate__content">
		<img
			class="certificate__image"
			src={image}
			alt={`${name} certificate`}
			width="160"
			height="160"
			loading="lazy"
		/>

		<figcaption class="certificate__name truncate-text">{name}</figcaption>
	</figure>
</a>

<style>
	.certificate {
		/* To show outline */
		display: inline-block;
	}

	.certificate__content {
		inline-size: 10rem;
		color: var(--medium-emphasis);
		text-transform: capitalize;
	}

	.certificate__image {
		margin-block-end: var(--space-stack-8x);
		overflow: hidden;
		background-color: var(--surface);
		border-radius: var(--radius-rounded-8);
		object-fit: cover;
		box-shadow: var(--elevation-1);
		transition: translate 0.3s var(--bouncing-transition);
	}

	.certificate:is(:hover, :focus-visible, :active) .certificate__image {
		translate: 0 -0.5rem;
	}

	.certificate__name {
		transition: color 0.35s var(--theme-transition);
	}

	.certificate:is(:hover, :focus-visible, :active) .certificate__name {
		color: var(--link);
	}
</style>
