---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
	isExternal?: boolean;
	class?: string;
}

const { href, class: className, isExternal = false, ...attrs } = Astro.props;

const externalAtts = isExternal
	? { target: "_blank", rel: "noopener noreferrer" }
	: {};
---

<a class={`link ${className}`} href={href} {...attrs} {...externalAtts}>
	<slot />
</a>

<style>
	.link {
		position: relative;
		font-size: var(--font-size-medium);
		font-weight: 700;
		color: var(--link);
	}

	.link::after {
		position: absolute;
		inset-inline: 0;
		block-size: 0.125rem;
		content: "";
		background-color: var(--link);
		transition: scale var(--bouncing-transition);
		transform-origin: center;
		inset-block-end: -0.125rem;
		scale: 0 1;
	}

	.link:is(:hover, :focus-visible)::after {
		scale: 1;
	}
</style>
