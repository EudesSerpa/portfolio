---
import { AUTHOR } from "@utils/const";
import Logo from "@components/Logo.astro";
import Link from "@components/Link.astro";
import Icon from "@components/Icon.astro";
import ButtonIcon from "@components/ButtonIcon.astro";
---

<footer class="footer wrapper flex-group">
	<Logo class="footer__logo" />

	<div class="footer__media social-media flex-group">
		<ButtonIcon href={AUTHOR.github} type="solid" isExternal>
			<Icon icon="github" />
		</ButtonIcon>
		<ButtonIcon href={AUTHOR.linkedin} type="solid" isExternal>
			<Icon icon="linkedin" />
		</ButtonIcon>
	</div>

	<p class="footer__copyright">
		<span>Design & Code with</span>
		<span class="visually-hidden">love</span>
		<Icon
			class="footer__icon footer__icon--heart"
			icon="heart"
			size="large"
			gradient
		/>
		<span>by</span>
		<Link href={AUTHOR.linkedin} isExternal>{AUTHOR.name}</Link>
	</p>
</footer>

<style>
	.footer {
		flex-wrap: wrap;
		padding-block: var(--space-stack-10x);
		background-color: transparent;
	}

	.footer__logo,
	.footer__media {
		flex: 1 1 auto;
	}

	.footer__logo {
		inline-size: 160px;
	}

	.footer__icon--heart {
		display: inline-block;
		vertical-align: text-bottom;
		rotate: 10deg;
	}

	.footer__copyright {
		text-align: center;
	}
</style>
